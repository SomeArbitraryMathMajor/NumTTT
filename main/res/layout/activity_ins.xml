<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:src="@drawable/t" />

        <ImageView
            android:id="@+id/turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="1dp"
            android:src="@drawable/g" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/a"
            android:layout_gravity="left|top"
            android:layout_margin="3dp"
            android:background="@drawable/bob2"
            android:clickable="true"
            android:onClick="aClick" />

        <ImageView
            android:id="@+id/b"
            android:layout_gravity="center|top"
            android:layout_margin="3dp"
            android:background="@drawable/bob2"
            android:clickable="true"
            android:onClick="bClick" />

        <ImageView
            android:id="@+id/c"
            android:layout_gravity="right|top"
            android:layout_margin="3dp"
            android:background="@drawable/bob2"
            android:clickable="true"
            android:onClick="cClick" />

        <ImageView
            android:id="@+id/d"
            android:layout_gravity="left|center"
            android:layout_margin="3dp"
            android:background="@drawable/bob2"
            android:clickable="true"
            android:onClick="dClick" />

        <ImageView
            android:id="@+id/e"
            android:layout_gravity="center|center"
            android:layout_margin="3dp"
            android:background="@drawable/bob2"
            android:clickable="true"
            android:onClick="eClick" />

        <ImageView
            android:id="@+id/f"
            android:layout_gravity="right|center"
            android:layout_margin="3dp"
            android:background="@drawable/bob2"
            android:clickable="true"
            android:onClick="fClick" />

        <ImageView
            android:id="@+id/g"
            android:layout_gravity="left|bottom"
            android:layout_margin="3dp"
            android:background="@drawable/bob2"
            android:clickable="true"
            android:onClick="gClick" />

        <ImageView
            android:id="@+id/h"
            android:layout_gravity="center|bottom"
            android:layout_margin="3dp"
            android:background="@drawable/bob2"
            android:clickable="true"
            android:onClick="hClick" />

        <ImageView
            android:id="@+id/i"
            android:layout_gravity="right|bottom"
            android:layout_margin="3dp"
            android:background="@drawable/bob2"
            android:clickable="true"
            android:onClick="iClick" />
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/res2"
            android:clickable="true"
            android:onClick="reset" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="@drawable/sss" />

        <ImageView
            android:id="@+id/s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:onClick="s1"
            android:src="@drawable/g1i" />

        <ImageView
            android:id="@+id/s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:onClick="s2"
            android:src="@drawable/g3i" />

        <ImageView
            android:id="@+id/s3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:onClick="s3"
            android:src="@drawable/g5i" />

        <ImageView
            android:id="@+id/s4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:onClick="s4"
            android:src="@drawable/g7i" />

        <ImageView
            android:id="@+id/s5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:onClick="s5"
            android:src="@drawable/g9i" />
    </LinearLayout>
</LinearLayout>